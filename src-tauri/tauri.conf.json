{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "worker-timer",
  "version": "0.1.0",
  "identifier": "com.tauri-app.worker-timer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
 
  "app": {
    "windows": [
      {
        "title": "worker-timer",
        "width": 700,
        "height": 300,
        "fullscreen": false,
        "resizable": false,
        "decorations": false,
        "visible": false,
        "devtools": true    
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
